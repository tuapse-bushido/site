FROM node:22-alpine
WORKDIR /app

# Включаем pnpm
RUN corepack enable && corepack prepare pnpm@10.0.0 --activate

# Копируем зависимости
COPY package.json pnpm-lock.yaml ./

# Устанавливаем зависимости
RUN pnpm install --frozen-lockfile

# Копируем код
COPY . .

EXPOSE 3001

# Запуск через tsx
CMD ["pnpm", "exec", "tsx", "server.ts"]
